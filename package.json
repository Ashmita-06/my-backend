{
  "name": "carbon-emissions-reduction-app",
  "version": "1.0.0",
  "description": "AI-powered carbon emissions reduction platform for thermal plants",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "setup": "npm install && cd client && npm install",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "axios": "^1.5.0",
    "socket.io": "^4.7.2",
    "openai": "^4.0.0",
    "tensorflow": "^4.10.0",
    "@tensorflow/tfjs-node": "^4.10.0",
    "ml-matrix": "^6.10.4",
    "simple-statistics": "^7.8.3",
    "chart.js": "^4.4.0",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.4",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "carbon-emissions",
    "climate-change",
    "ai",
    "machine-learning",
    "sustainability",
    "thermal-plants",
    "hackathon",
    "carbon-capture",
    "optimization"
  ],
